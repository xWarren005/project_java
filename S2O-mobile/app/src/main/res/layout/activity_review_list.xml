<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEF2F5"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- HEADER -->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà Hàng Hương Việt"
            android:textSize="12sp"
            android:textColor="#777777"/>

    <!-- SUMMARY CARD -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:orientation="horizontal"
            android:padding="12dp">

        <!-- SCORE -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★★"
                    android:textColor="#FFC107"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="234 đánh giá"
                    android:textSize="12sp"
                    android:textColor="#666666"/>
        </LinearLayout>

        <!-- BREAKDOWN -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 ★  ████████  163"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 ★  ████  47"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 ★  ██  16"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 ★  ▌  5"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1 ★  ▌  3"/>
        </LinearLayout>

    </LinearLayout>

    <!-- FILTER -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_active"
                android:padding="10dp"
                android:text="Tất cả"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip"
                android:padding="10dp"
                android:text="5 ★"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip"
                android:padding="10dp"
                android:text="4 ★"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_chip"
                android:padding="10dp"
                android:text="3 ★"/>
    </LinearLayout>

    <!-- REVIEWS -->
    <include layout="@layout/item_review_user"/>
    <include layout="@layout/item_review_user"/>

    <!-- BUTTON -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:text="Viết đánh giá"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

</LinearLayout>
